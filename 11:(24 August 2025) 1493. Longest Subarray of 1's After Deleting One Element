class Solution(object):
    def longestSubarray(self, nums):
        if all(num == 1 for num in nums):
            return len(nums) - 1
        l=0
        zero_count=0
        max_window=0
        for r in range(len(nums)):
            if nums[r]==0:
                zero_count+=1
            while zero_count>1 and l<r:
                if nums[l]==0:
                    zero_count-=1
                l+=1
            max_window=max(max_window,(r-l+1)-zero_count)
        return max_window
